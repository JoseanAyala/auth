meta {
  name: Refresh
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/auth/refresh
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{refresh_token}}
}

script:post-response {
  if (res.status === 200) {
    bru.setEnvVar("access_token", res.getBody().access_token);
    bru.setEnvVar("refresh_token", res.getBody().refresh_token);
  }
}
