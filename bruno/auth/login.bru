meta {
  name: Login
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/auth/login
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "user@example.com",
    "password": "supersecret"
  }
}

script:after-response {
  if (res.status === 200) {
    bru.setEnvVar("token", res.getBody().token);
  }
}
